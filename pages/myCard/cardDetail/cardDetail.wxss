/* pages/myCard/cardDetail/cardDetail.wxss */
.card-cell {
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0px 4px 10px 0px rgba(73, 44, 112, 0.03);
  display: flex;
  margin: 30rpx;
} 
.card-left image {
  width: 100rpx;
  height: 100rpx;
  margin: 50rpx;
}
.card-right {
  padding: 30rpx;
}
.card-right .big-txt {
  font-size: 36rpx;
  margin: 20rpx 0 10rpx;
}
.card-right .small-txt {
  font-size: 24rpx;
  color: #9A9A9A;
}
.shareBtn {
  background: #fff!important;
  font-size:24rpx;
  color: #9A9A9A;
  text-align: right;
  font-weight: normal;
  padding-right: 0;
}

.useBtn {
  position: fixed;
  bottom: 120rpx;
  left: 30rpx;
  right: 30rpx;
  height: 90rpx;
  background: linear-gradient(135deg, #5E98FE 0%, #83B0FF 100%);
  box-shadow: 0px 2px 4px 0px rgba(73, 44, 112, 0.02);
  border-radius: 45rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #fff;
}